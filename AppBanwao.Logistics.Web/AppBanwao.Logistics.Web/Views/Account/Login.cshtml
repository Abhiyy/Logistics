@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@model AppBanwao.Logistics.Web.ViewModel.LoginModel
<div class="container">
    <div class="row">
        <div class="col-md-6 col-xs-6 col-lg-6 col-sm-6 col-md-offset-3 col-lg-offset-3" style="min-height:400px">

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class="form-horizontal"}))
            {    <fieldset>
                    <legend>Legend</legend>
            @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-lg-2 control-label" })
                        
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Please provide your email address here" })
                           @Html.ValidationMessageFor(m => m.UserName,null ,new  { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Please provide your password here" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                            <div class="checkbox">
                                <label>
                                  @Html.CheckBoxFor(m=>m.isRemember) Remember me
                                      
                                </label>
                            </div>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            
                            <button type="submit" class="btn btn-primary">Login <i class="fa fa-sign-in"></i> </button>

                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>