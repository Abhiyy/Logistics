@model AppBanwao.Logistics.Web.ViewModel.ShipmentDetailModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-3 borderMenu">
            @Html.Partial("_PartialAdminMenu")
        </div>
        <div class="col-md-9">
            <div class="row">

                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="@Url.Action("Index","Admin")">Home</a></li>
                        <li><a href="@Url.Action("Index","Shipment")">Shipment</a></li>
                        <li class="active">Details</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    @using (Html.BeginForm("Create", "Shipment", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <fieldset>
                            <legend><i class="fa fa-plus"></i> Shipment details</legend>
                            @Html.AntiForgeryToken()
                            
                            <div class="form-group">

                                @Html.LabelFor(m => m.ShipmentAWB, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static">     @Html.DisplayFor(m => m.ShipmentAWB)</p>

                            </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Description, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static"> @Html.DisplayFor(m => m.Description)</p>

                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Details, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static"> @Html.DisplayFor(m => m.Details)</p>

                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.ExpectedDeliveryOn, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static"> @Html.DisplayFor(m => m.ExpectedDeliveryOn)</p>

                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.ActualDeliveryDate, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static"> @if(Model.ActualDeliveryDate!=null){ @Html.DisplayFor(m => m.ActualDeliveryDate)}else{<text><span class="label label-warning">Product not delivered.</span></text>}</p>

                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.ShipmentStatus, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static label label-info">  @Html.DisplayFor(m => m.ShipmentStatus)</p>

                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.ShipmentCreatedOn, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static"> @Html.DisplayFor(m => m.ShipmentCreatedOn)</p>

                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.ShipmentUpdatedOn, new { @class = "col-md-4 control-label" })

                                <div class="col-md-6">
                                    <p class="form-control-static"> @Html.DisplayFor(m => m.ShipmentUpdatedOn)</p>

                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                    <div class="col-md-6 col-md-offset-4">
                                    <a href="@Html.Action("Edit","Shipment",new {id=Model.ShipmentID})" class="btn btn-primary">Edit <i class="fa fa-edit"></i></a>
                            </div>
                            </div>
                            <hr />
                            <h4><i class="fa fa-search"></i> Shipment Sender Details</h4>
                            @if (!(String.IsNullOrEmpty(Model.SName)))
                            {

                            }
                            else
                            {<br />
                                <br />
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <a href="@Html.Action("Sender","Shipment",new {id=Model.ShipmentID})" class="btn btn-primary">Add Sender Details <i class="fa fa-plus"></i></a>
                                    </div>
                                </div>
                            }
                            <hr />
                            <h4><i class="fa fa-search"></i> Shipment Sender Details</h4>
                            @if (!(String.IsNullOrEmpty(Model.RName)))
                            {

                            }
                            else
                            {<br />
                                <br />
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <a href="@Html.Action("Recepient","Shipment",new {id=Model.ShipmentID})" class="btn btn-primary">Add Recepient Details <i class="fa fa-plus"></i></a>
                                    </div>
                                </div>
                            }
                            <hr />
                            <h4><i class="fa fa-search"></i> Shipment Sender Details</h4>
                            @if (!(Model.ShipmentHistory.Count>0))
                            {

                            }
                            else
                            {<br />
                                <br />
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <a href="@Html.Action("AddHistory","Shipment",new {id=Model.ShipmentID})" class="btn btn-primary">Add History <i class="fa fa-plus"></i></a>
                                    </div>
                                </div>
                            }
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>